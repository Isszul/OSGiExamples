<?xml version="1.0" encoding="UTF-8"?>
<!-- This is the bean definition for the web service. Be sure when using 
	this web service you have the bundle: org.apache.servicemix.cxf.transport.osgi-4.0.0.jar 
	present in your osgi plattform. It is used to generate the META-INF/cxf files -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://cxf.apache.org/jaxws
						http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:*/cxf/cxf-extension-*.xml" />
	<import resource="classpath:META-INF/cxf/osgi/cxf-extension-osgi.xml" />

	<bean id="simpleTestEndPoint" class="simplecxfsoapservice.SimpleTest">
		<property name="simpleStateFullService" ref="simpleStateFullService" />
	</bean>
	
	<jaxws:endpoint id="aSimpleTest" implementor="#simpleTestEndPoint"
		address="/SimpleTest" />
	

</beans>